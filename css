/* Definir la animación suave del fondo */
@keyframes moverFondoSuave {
    0% {
        background-position: 0 0; /* Posición inicial */
    }
    50% {
        background-position: 50px 10px; /* Desplazamiento ligero para simular el movimiento de las olas */
    }
    100% {
        background-position: 0 0; /* Volver a la posición original */
    }
}
body{
    background-image: url();
    position: absolute;
    background-position: center top;
        background-repeat: no-repeat; /* No repetir la imagen */
        height: 100px;
       width: 100px;
    margin: 0;
    background-size: cover; /* Asegurar que la imagen cubra todo el fondo */
    background-attachment: fixed; /* El fondo permanecerá fijo en su posición, sin desplazarse con el scroll */
    animation: moverFondoSuave 5s ease-in-out infinite; /* Aplicar la animación, con duración de 20s, suavidad, y repetición infinita */
}
